// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String      @default(cuid()) @id
  name          String?
  email         String?     @unique
  password      String
  role          Int         @default(3)
  games         Game[]
  apps          App[]
}

model Roles {
  id            String      @default(cuid()) @id
  role          String      @unique @default("none")
}

model Game {
  id            String      @default(cuid()) @id
  name          String      @unique
  genre         String      
  description   String     
  creator       User        @relation(fields: [id], references: [id])    
}

model App {
  id            String      @default(cuid()) @id
  name          String      @unique
  genre         String      
  description   String     
  creator       User        @relation(fields: [id], references: [id])    
}